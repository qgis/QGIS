        <Name>time_min_offset</Name>
        <Title>Time yyyy-MM-ddThh:mmt</Title>
        <CRS>EPSG:4326</CRS>
        <Dimension name="time" units="ISO8601" default="2020-06-15T12:30+02:00">
          2020-06-15T12:30+02:00
        </Dimension>
        <BoundingBox CRS="EPSG:4326" minx="-180" miny="-90" maxx="180" maxy="90"/>
      </Layer>

      <!-- yyyy-MM-ddThht (hours with timezone offset) -->
      <Layer>
        <Name>time_hour_offset</Name>
        <Title>Time yyyy-MM-ddThht</Title>
        <CRS>EPSG:4326</CRS>
        <Dimension name="time" units="ISO8601" default="2020-06-15T12+02:00">
          2020-06-15T12+02:00
        </Dimension>
        <BoundingBox CRS="EPSG:4326" minx="-180" miny="-90" maxx="180" maxy="90"/>
      </Layer>

      <!-- Test layer for enableTime=false with milliseconds -->
      <Layer>
        <Name>time_ms_disabled</Name>
        <Title>Time ms with enableTime=false</Title>
        <CRS>EPSG:4326</CRS>
        <Dimension name="time" units="ISO8601" default="2020-06-15T12:30:45.123Z">
          2020-06-15T12:30:45.123Z
        </Dimension>
        <BoundingBox CRS="EPSG:4326" minx="-180" miny="-90" maxx="180" maxy="90"/>
